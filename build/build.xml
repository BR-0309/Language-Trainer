<?xml version="1.0" encoding="UTF-8"?>
	<project name="Language Trainer" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
		<property name="version" value="0.0.6"/>
		<!--Change to have systemwide installation-->
		<property name="systemwide" value="false"/>
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="C:\Program Files\Java\jdk1.8.0_60\..\lib\ant-javafx.jar"/>
				<file name="C:\Program Files\Java\jdk1.8.0_60\lib\jfxrt.jar"/>
				<file name="${basedir}"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\Benjamin\OneDrive\Coding\LanguageTrainer\Language Trainer">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="LanguageTrainer.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="LanguageTrainer"
			mainClass="br_0309.apps.languageTrainer.LanguageTrainer"
			toolkit="fx"
			version="${version}"/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/LanguageTrainer.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Benjamin Raison"/>
				<attribute name="Implementation-Title" value="Language Trainer"/>
				<attribute name="Implementation-Version" value="${version}"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			verbose="true" 
			embedJNLP="true"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="Language Trainer" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="C:\Program Files\Java\jdk1.8.0_60"/>
			<fx:info title="Language Trainer" vendor="Benjamin Raison">
				<!--Use this until I find a better solution-->
				<fx:icon href="LanguageTrainer.ico" kind="default"/>
			</fx:info>		
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
			<fx:preferences 
				install="${systemwide}"
				menu="true"
				shortcut="true"/>
		</fx:deploy>
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
</project>
